<!DOCTYPE html>
<head>
	<title>Todo Page</title>
	<link rel="stylesheet" href="/stylesheets/todo.css" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
	integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
	<div class="todo-container">
		<% const dateObj = new Date() %>
		<% const monthName = dateObj.toLocaleString("default", { month: "long" }) %>
		<h2>Goals for <%=  monthName %> </h2>
			<div class="todo">
				<form action="/todos" method="POST" class="todo-header">
					<input type="text" name="content">
					<button type="submit"><span class="fas fa-plus"></span></button>
				</form>
				<ul class="todo-list">
					<% user.todos.forEach(todo => { %>
						<li class="todo-list-item">
							<div class="todo-list-item-name"><%= todo.content %></div>
							<a href="/todos/edit/<%= todo._id %>" class="edit">
								<span class="fas fa-edit"></span>
							</a>
							<a href="/todos/remove/<%= todo._id %>" class="remove">
								<span class="fas fa-times"></span>
							</a>
						</li>
					<% }) %>
				</ul>
				<a href="/notes" style="font-family: 'Candal', sans-serif;">Go back</a>
			</div>
		</div>
</body>

